<h2>
    <strong>Books</strong>
</h2>

<p>
  <span>title</span>
  <span>body</span>
</p>

<p>
  <span>たのしいRuby</span>
  <span>Rubyの入門におすすめです</span>
  <span><%= link_to "Show", "/books/:id" %></span>
  <span><%= link_to "Edit", "books/edit" %></span>
  <span><%= link_to "Destroy", "books", method: :delete, "data-confirm" => "Are you sure？" %></span>
</p>



<h3><strong>New Book</strong></h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book,url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit "Create Book" %></p>
<% end %>